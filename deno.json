{
  "nodeModulesDir": "auto",
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "always",
      "semiColons": true,
      "singleQuote": false,
      "useTabs": false
    },
    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules", "vendor", "**/dist"]
  },
  "lint": {
    "rules": {
      "include": ["verbatim-module-syntax"],
      "exclude": [
        "no-namespace",
        "no-explicit-any",
        "no-empty-interface",
        "no-empty",
        "ban-types",
        "no-misused-new"
      ]
    }
  },
  "vendor": true,
  "workspace": {
    "members": ["workspace/apps/ui", "workspace/apps/server"]
  },
  "tasks": {
    "build:ui": {
      "description": "Build the ui application",
      "command": "deno task -f app-ui build"
    },
    "dev:ui": {
      "description": "Run development server for ui",
      "command": "deno task -f app-ui dev"
    },
    "preview:server": {
      "description": "Preview the built server application",
      "command": "deno task -f app-server preview"
    },
    "test:server": {
      "description": "Test the server application",
      "command": "deno task -f app-server test"
    },
    "dev:server": {
      "description": "Run development server",
      "command": "deno task -f app-server dev"
    },
    "start:server": {
      "description": "Start production server",
      "command": "deno task -f app-server start"
    },
    "dev:all": {
      "description": "Run both UI and server in development mode",
      "command": "deno task dev:ui & deno task dev:server"
    }
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@1.1.2",
    "@std/dotenv": "jsr:@std/dotenv@0.225.5",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.8",
    "@std/testing": "jsr:@std/testing@1.0.15",
    "@std/expect": "jsr:@std/expect@1.0.17"
  }
}
