{
  "license": "MIT",
  "nodeModulesDir": "auto",
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "always",
      "semiColons": true,
      "singleQuote": false,
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "useTabs": false
    },
    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules", "vendor", "**/dist"]
  },
  "lint": {
    "rules": {
      "include": ["verbatim-module-syntax"],
      "exclude": [
        "no-namespace",
        "no-explicit-any",
        "no-empty-interface",
        "no-empty",
        "ban-types"
      ]
    }
  },
  "vendor": true,
  "workspace": {
    "members": ["workspace/apps/ui"]
  },
  "tasks": {
    "build:ui": {
      "description": "Build the ui application",
      "command": "deno task -f app-ui build"
    },
    "dev:ui": {
      "description": "Run development server for ui",
      "command": "deno task -f app-ui dev"
    },
    "preview:server": {
      "description": "Preview the built server application",
      "command": "deno task -f app-server preview"
    },
    "test:server": {
      "description": "Test the server application",
      "command": "deno task -f app-server test"
    }
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@1.0.17",
    "@std/path": "jsr:@std/path@1.0.9",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.7",
    "@std/testing": "jsr:@std/testing@1.0.12",
    "@std/expect": "jsr:@std/expect@1.0.16",
    "@types/react": "npm:@types/react@^19.1.8",
    "@types/react-dom": "npm:@types/react-dom@^19.1.6"
  }
}
