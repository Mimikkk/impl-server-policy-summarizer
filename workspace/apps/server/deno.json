{
  "name": "@nimir/app-server",
  "version": "0.0.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": {
      "description": "Run the server in development mode",
      "command": "deno run -A --watch src/main.ts"
    },
    "start": {
      "description": "Start the production server",
      "command": "deno run -A src/main.ts"
    },
    "preview": {
      "description": "Preview the built server application",
      "command": "deno run -A src/main.ts"
    },
    "test": {
      "description": "Test the server application",
      "command": "deno test -A"
    }
  },
  "imports": {
    "@utilities/": "./src/core/utilities/",
    "@services/": "./src/core/services/",
    "@persistence/": "./src/persistence/",
    "@features/": "./src/features/",
    "@configs/": "./src/configs/",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@1.1.2",
    "@std/dotenv": "jsr:@std/dotenv@0.225.5",
    "@std/crypto": "jsr:@std/crypto@1.0.0",
    "ollama": "npm:ollama@0.6.0",
    "hono": "npm:hono@4.9.12",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@1.1.3",
    "@hono/zod-validator": "npm:@hono/zod-validator@0.7.4",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@0.9.21",
    "zod": "npm:zod@4.1.12",
    "pino": "npm:pino@10.0.0",
    "pino-pretty": "npm:pino-pretty@13.1.2",
    "drizzle-orm": "npm:drizzle-orm@0.44.6",
    "drizzle-zod": "npm:drizzle-zod@0.8.3",
    "@libsql/client": "npm:@libsql/client@0.6.2",
    "@libsql/client": "../../../node_modules/@libsql/client/lib-esm/node.js"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "ESNext"],
    "noErrorTruncation": true,
    "strict": true
  }
}
